<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Country</th>
      <th>City</th>
      <th>Name</th>
      <th>Distance</th>
      <th>Desc</th>
      <th>Number</th>
      <th>Time</th>
      <th>Distance</th>
      <th>Event type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.country %></td>
        <td><%= event.city %></td>
        <td><%= event.name %></td>
        <td><%= event.distance %></td>
        <td><%= event.desc %></td>
        <td><%= event.number %></td>
        <td><%= event.time %></td>
        <td><%= event.distance %></td>
        <td><%= event.event_type %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

